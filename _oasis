#                                                               -*-conf-*-
OASISFormat: 0.2
Name:        lacaml
Version:     5.5.2
Synopsis:    Binding to BLAS and LAPACK.
Description: This library interfaces the BLAS-library (Basic Linear Algebra Subroutines) and LAPACK-library (Linear Algebra routines), which are written in FORTRAN.
Authors:     Markus Mottl <markus.mottl@gmail.com>,
  Liam Stewart <liam@cs.toronto.edu>,
  Christophe Troestler <Christophe.Troestler@umons.ac.be>
License:     LGPL-2.1 with OCaml linking exception
Plugins:     META (0.2), StdFiles (0.2)
Homepage:    http://forge.ocamlcore.org/projects/lacaml/
PostConfCommand: ocaml make_prec_dep.ml

Library lacaml
  Path:	      lib
  BuildTools: ocamlbuild
  # Many files are generated by the post-configure script.
  # lib/lacaml.mlpack (and _tags) sets the packed modules forming this
  # library.
  Modules:    Lacaml
  # Special rules defined for the C code in myocamlbuild.ml
  CSources:   impl_c.c, utils_c.c,
        vec2_S_c.c, vec2_D_c.c,
        vec2_C_c.c, vec2_Z_c.c,
        mat4_S_c.c, mat4_D_c.c,
        mat4_C_c.c, mat4_Z_c.c,
        impl4_S_c.c, impl4_D_c.c,
        impl4_C_c.c, impl4_Z_c.c,
        impl2_S_c.c, impl2_D_c.c,
        impl2_C_c.c, impl2_Z_c.c,
        exp10.c,
        f2c.h, lacaml_macros.h, utils_c.h
  BuildDepends: bigarray
  if system(linux)
    CCLib: -lblas -llapack
  if system(Darwin)
    CCOpt: -DEXTERNAL_EXP10 -L/sw/lib -framework vecLib
  if system(mingw)
    CCOpt: -DEXTERNAL_EXP10

Library lacaml_top
  Path:       lib
  BuildTools: ocamlbuild
  Modules:    Install_printers
  FindlibName:   top
  FindlibParent: lacaml
  XMETARequires: lacaml
  XMETADescription: Toplevel module for Lacaml.


